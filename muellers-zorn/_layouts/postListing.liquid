---
layout: base
---

  {%- if page.title -%}
    <h1 class="page-heading">{{ page.title }}</h1>
  {%- endif -%}
  {{ content }}

  <ul class="post-list">
    {%- for post in site.gedichte -%}
      <li>
        <h3>
          <a class="post-link" href="{{ post.url | relative_url }}">
            {{ post.title | escape }}
          </a>
        </h3>
        {%- if site.show_excerpts -%} {{ post.excerpt }} {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>